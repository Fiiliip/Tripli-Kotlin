<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="355dp"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/itinerary_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bali"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itinerary_item_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Ubud, Bali"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/itinerary_item_image"
        app:layout_constraintTop_toTopOf="@+id/include"
        tools:text="Ubud, Bali" />

    <TextView
        android:id="@+id/itinerary_item_author_nickname"
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:layout_marginStart="20dp"
        android:text="Author Nickname"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/itinerary_item_image"
        app:layout_constraintTop_toBottomOf="@+id/itinerary_item_title"
        tools:text="WillTh3Traveller_" />

    <include
        android:id="@+id/include"
        layout="@layout/price_tag"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RatingBar
        android:id="@+id/itinerary_item_rating_bar"
        style="@style/CustomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="4"
        android:stepSize="0.5"
        app:layout_constraintStart_toStartOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@+id/include" />


</androidx.constraintlayout.widget.ConstraintLayout>